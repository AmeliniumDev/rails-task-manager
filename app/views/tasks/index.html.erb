<h1>My tasks</h1>

<!--
title
details
completed
-->

<% @tasks.each do |task| %>
  <div>
    <h2><%= link_to "#{task.title}", task_path(task.id) %></h2>
    <!-- <p><%= task.details %></p> -->
    <p>Done: <%= task.completed %></p>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </div>
<% end %>

<p><%= link_to "Add new task", new_path %></p>
